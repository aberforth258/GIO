@model BookingWeb
@{
   ViewBag.Title = "";
 Layout = "~/Views/Shared/_Layout.cshtml";
} 




<link href="Styles.css" rel="stylesheet" type="text/css" />
<div>
    <h1 class="display-4" style="text-align: center">New Booking</h1>
</div>

@using(Html.BeginForm("SubmitEditBooking", "Bookings"))
{
    <div class="form-group">
        <div>
        @Html.LabelFor(s => s.BookingId)
        @Html.TextBoxFor(s => s.BookingId, new {@class = "form-control",@readonly = "readonly"})
        </div>
        <div>
        @Html.LabelFor(s => s.CustomerReference)
        @Html.TextBoxFor(s => s.CustomerReference, new {@class = "form-control"})
        </div>
        <div>
        @Html.LabelFor(s => s.WindowStart)
        @Html.TextBoxFor(s => s.WindowStart, new {@class = "form-control"})
        </div>
        <div>
        @Html.LabelFor(s => s.WindowEnd)
        @Html.TextBoxFor(s => s.WindowEnd, new {@class = "form-control"})
        </div>
        <div>
        @Html.LabelFor(s => s.DriverId)
        @Html.TextBoxFor(s => s.DriverId, new {@class = "form-control"})
        </div>
        <div>
        @Html.LabelFor(s => s.VehicleId)
        @Html.TextBoxFor(s => s.VehicleId, new {@class = "form-control"})
        </div>
        <div>
        @Html.LabelFor(s => s.TrailerId)
        @Html.TextBoxFor(s => s.TrailerId, new {@class = "form-control"})
        </div>
        <div>
        @Html.LabelFor(s => s.HaulierId)
        @Html.TextBoxFor(s => s.HaulierId, new {@class = "form-control"})
        </div>
        <div style="display:inline-block">
            <button type="submit" value="Submit" class="btn btn-primary">Submit</button>
        </div>
        <div style="display:inline-block; margin: 20px 0px 0px 20px">
            <button value="Back" class="btn btn-primary">Back</button>
        </div>
    </div>
}